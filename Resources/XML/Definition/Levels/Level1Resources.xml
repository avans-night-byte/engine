<?xml version="1.1" encoding="UTF-8"?>
<lr:level
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="LevelResources  ../../Schemas/level-resources.xsd
                            Common ../../Schemas/common.xsd"
        xmlns:lr="LevelResources"
        xmlns:common="Common">

    <!-- TODO: Global Resource like: bullets -->
    <name>Level1</name>
    <object>
        <name>Sascha Varken</name>
        <components>
            <component>
                <componentName>TransformComponent</componentName>
                <transformComponent>
                    <common:position>
                        <x>50</x>
                        <y>50</y>
                    </common:position>
                </transformComponent>
            </component>

            <component>
                <componentName>RenderComponent</componentName>
                <renderComponent>
                    <spriteId>CrateTNT</spriteId>
                    <spritePath>../../Resources/Sprites/Wooden_Crate.png</spritePath>
                    <width>100</width>
                    <height>100</height>
                </renderComponent>
            </component>

            <component>
                <componentName>PhysicsComponent</componentName>
                <physicsComponent>
                    <common:position>
                        <x>0</x>
                        <y>0</y>
                    </common:position>
                    <friction>0.5</friction>
                    <bodyType>Dynamic</bodyType>
                    <bodyShape>
                        <box>
                            <width>50</width>
                            <height>50</height>
                        </box>
                    </bodyShape>
                    <isSensor>false</isSensor>
                </physicsComponent>
            </component>

        </components>
    </object>

    <object>
        <name>To Level Charlie</name>
        <components>
            <component>
                <componentName>TransformComponent</componentName>
                <transformComponent>
                    <common:position>
                        <x>1</x>
                        <y>2</y>
                    </common:position>
                </transformComponent>
            </component>

            <component>
                <componentName>NextLevelComponent</componentName>
                <nextLevelComponent>
                    <levelName>LevelCharlie</levelName>
                </nextLevelComponent>
            </component>

            <component>
                <componentName>PhysicsComponent</componentName>
                <physicsComponent>
                    <common:position>
                        <x>0</x>
                        <y>0</y>
                    </common:position>
                    <friction>0</friction>
                    <bodyType>Static</bodyType>
                    <bodyShape>
                        <box>
                            <width>50</width>
                            <height>50</height>
                        </box>
                    </bodyShape>
                    <isSensor>true</isSensor>
                    <collisionHandler>NextLevelComponent</collisionHandler>
                </physicsComponent>
            </component>
        </components>
    </object>

</lr:level>