<?xml version="1.1" encoding="UTF-8"?>
<lr:level-resources
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="LevelResources  ../../Schemas/level-resources.xsd
                            Common ../../Schemas/common.xsd"
        xmlns:lr="LevelResources"
        xmlns:common="Common">
    <level>
        <!-- TODO: Global Resource like: bullets -->
        <name>Shop Outside</name>
        <background-music>battle</background-music>
        <object>
            <name>Sascha Varken</name>
            <objectType>object</objectType>
            <components>
                <component>
                    <componentName>TransformComponent</componentName>
                    <transformComponent>
                        <common:position>
                            <x>100</x>
                            <y>100</y>
                        </common:position>
                    </transformComponent>
                </component>

                <component>
                    <componentName>RenderComponent</componentName>
                    <renderComponent>
                        <spriteId>crate</spriteId>
                        <size>
                            <width>100</width>
                            <height>100</height>
                        </size>
                        <offset>
                            <width>0</width>
                            <height>0</height>
                        </offset>
                    </renderComponent>
                </component>

                <component>
                    <componentName>PhysicsComponent</componentName>
                    <physicsComponent>
                        <common:position>
                            <x>0</x>
                            <y>0</y>
                        </common:position>
                        <friction>0.5</friction>
                        <bodyType>Dynamic</bodyType>
                        <bodyShape>
                            <box>
                                <width>50</width>
                                <height>50</height>
                            </box>
                        </bodyShape>
                        <isSensor>false</isSensor>
                    </physicsComponent>
                </component>
            </components>
        </object>

        <object>
            <name>To Level Charlie</name>
            <objectType>level_change</objectType>
            <components>
                <component>
                    <componentName>TransformComponent</componentName>
                    <transformComponent>
                        <common:position>
                            <x>1</x>
                            <y>2</y>
                        </common:position>
                    </transformComponent>
                </component>

                <component>
                    <componentName>NextLevelComponent</componentName>

                    <nextLevelComponent>
                        <levelName>PlainsOpen</levelName>
                        <spawnPointName>FromShopOutside</spawnPointName>
                    </nextLevelComponent>
                </component>

                <component>
                    <componentName>PhysicsComponent</componentName>
                    <physicsComponent>
                        <common:position>
                            <x>0</x>
                            <y>0</y>
                        </common:position>
                        <friction>0</friction>
                        <bodyType>Static</bodyType>
                        <bodyShape>
                            <box>
                                <width>50</width>
                                <height>50</height>
                            </box>
                        </bodyShape>
                        <isSensor>true</isSensor>
                        <collisionHandler>NextLevelComponent</collisionHandler>
                    </physicsComponent>
                </component>
            </components>
        </object>

        <object>
            <name>To Shop Inside</name>
            <objectType>level_change</objectType>
            <components>
                <component>
                    <componentName>TransformComponent</componentName>
                    <transformComponent>
                        <common:position>
                            <x>1</x>
                            <y>2</y>
                        </common:position>
                    </transformComponent>
                </component>

                <component>
                    <componentName>NextLevelComponent</componentName>

                    <nextLevelComponent>
                        <levelName>ShopInside</levelName>
                        <spawnPointName>FromShopOutside</spawnPointName>
                    </nextLevelComponent>
                </component>

                <component>
                    <componentName>PhysicsComponent</componentName>
                    <physicsComponent>
                        <common:position>
                            <x>0</x>
                            <y>0</y>
                        </common:position>
                        <friction>0</friction>
                        <bodyType>Static</bodyType>
                        <bodyShape>
                            <box>
                                <width>50</width>
                                <height>50</height>
                            </box>
                        </bodyShape>
                        <isSensor>true</isSensor>
                        <collisionHandler>NextLevelComponent</collisionHandler>
                    </physicsComponent>
                </component>
            </components>
        </object>

        <object>
            <name>FromPlainsOpen</name>
            <objectType>object</objectType>
            <components>
                <component>
                    <componentName>TransformComponent</componentName>
                    <transformComponent>
                        <common:position>
                            <x>0</x>
                            <y>0</y>
                        </common:position>
                    </transformComponent>
                </component>
                
                <component>
                    <componentName>PlayerSpawnerComponent</componentName>
                    <playerSpawnerComponent>
                        <pointName>FromPlainsOpen</pointName>
                    </playerSpawnerComponent>
                </component>
            </components>
        </object>

        <object>
            <name>FromShopInside</name>
            <objectType>object</objectType>
            <components>
                <component>
                    <componentName>TransformComponent</componentName>
                    <transformComponent>
                        <common:position>
                            <x>0</x>
                            <y>0</y>
                        </common:position>
                    </transformComponent>
                </component>

                <component>
                    <componentName>PlayerSpawnerComponent</componentName>
                    <playerSpawnerComponent>
                        <pointName>FromShopInside</pointName>
                    </playerSpawnerComponent>
                </component>
            </components>
        </object>

    </level>
    <common:preloadResources>
        <resource>crate</resource>
        <resource>shot</resource>
        <resource>boar</resource>
        <resource>battle</resource>
        <resource>open_inventory</resource>
        <resource>inventory_slot</resource>
    </common:preloadResources>
</lr:level-resources>