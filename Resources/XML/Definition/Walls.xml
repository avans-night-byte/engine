<?xml version="1.0" encoding="UTF-8" ?>
<walls xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../Schemas/wall.xsd">
    <className>NightByte.Engine.Entities.Wall</className>
    <!-- Level 1: Wood -->
    <wall>
        <!-- Specific properties -->
        <name>Wood</name>
        <level>wall1</level>
        <baseHealth>100</baseHealth>

        <pricing>
            <cost>25</cost>
            <upgrade>
                <cost>25</cost>
                <nextLevel>wall2</nextLevel>
            </upgrade>
        </pricing>


        <!-- Common properties -->
        <resources>
            <default>wall1_default</default>
        </resources>

        <collider hasCollision="true">
            <size>
                <width>1</width>
                <height>1</height>
            </size>
        </collider>

        <events>
            <onAttacked>
                <soundAction>../assets/wall_attack.ogg</soundAction>
            </onAttacked>
        </events>
    </wall>

