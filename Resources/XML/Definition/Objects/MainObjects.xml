<?xml version="1.1" encoding="UTF-8"?>
<obj:objectList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="Objects  ../../Schemas/objects.xsd
                                    Common ../../Schemas/common.xsd"
                xmlns:obj="Objects"
                xmlns:common="Common">

    <object>
        <name>character</name>
        <objectType>character</objectType>
        <components>
            <component>
                <componentName>WalletComponent</componentName>
                <walletComponent/>
            </component>

            <component>
                <componentName>TradingComponent</componentName>
                <tradingComponent/>
            </component>

            <component>
                <componentName>CharacterComponent</componentName>
                <characterComponent/>
            </component>

            <component>
                <componentName>HealthComponent</componentName>
                <healthComponent/>
            </component>

            <component>
                <componentName>TransformComponent</componentName>
                <transformComponent>
                    <common:position>
                        <x>200</x>
                        <y>200</y>
                    </common:position>
                </transformComponent>
            </component>

            <component>
                <componentName>WeaponComponent</componentName>
                <weaponComponent/>
            </component>

            <component>
                <componentName>InventoryComponent</componentName>
                <inventoryComponent/>
            </component>

            <component>
                <componentName>PhysicsComponent</componentName>
                <physicsComponent>
                    <common:position>
                        <x>0</x>
                        <y>0</y>
                    </common:position>
                    <friction>0</friction>
                    <bodyType>Dynamic</bodyType>
                    <bodyShape>
                        <circle>
                            <common:position>
                                <x>100</x>
                                <y>100</y>
                            </common:position>
                            <radius>20.0</radius>
                        </circle>
                    </bodyShape>
                </physicsComponent>
            </component>

            <component>
                <componentName>RenderComponent</componentName>
                <renderComponent>
                    <spriteId>character</spriteId>
                    <size>
                        <width>96</width>
                        <height>104</height>
                    </size>
                    <offset>
                        <width>0</width>
                        <height>20</height>
                    </offset>
                </renderComponent>
            </component>

            <component>
                <componentName>BuildComponent</componentName>
                <bulletComponent/>
            </component>
        </components>
    </object>

    <object>
        <name>zombie</name>
        <objectType>character</objectType>
        <components>
            <component>
                <componentName>RenderComponent</componentName>
                <renderComponent>
                    <spriteId>zombie</spriteId>
                    <size>
                        <width>144</width>
                        <height>150</height>
                    </size>
                    <offset>
                        <width>0</width>
                        <height>50</height>
                    </offset>
                </renderComponent>
            </component>

            <component>
                <componentName>ZombieComponent</componentName>
                <zombieComponent/>
            </component>

            <component>
                <componentName>TransformComponent</componentName>
                <transformComponent>
                    <common:position>
                        <x>300</x>
                        <y>300</y>
                    </common:position>
                </transformComponent>
            </component>

            <component>
                <componentName>PhysicsComponent</componentName>
                <physicsComponent>
                    <common:position>
                        <x>300</x>
                        <y>300</y>
                    </common:position>
                    <friction>1</friction>
                    <bodyType>Dynamic</bodyType>
                    <bodyShape>
                        <circle>
                            <common:position>
                                <x>0</x>
                                <y>0</y>
                            </common:position>
                            <radius>20</radius>
                        </circle>
                    </bodyShape>
                </physicsComponent>
            </component>

            <component>
                <componentName>PhysicsComponent</componentName>
                <physicsComponent>
                    <common:position>
                        <x>300</x>
                        <y>300</y>
                    </common:position>
                    <friction>1</friction>
                    <bodyType>Dynamic</bodyType>
                    <bodyShape>
                        <box>
                            <width>30</width>
                            <height>70</height>
                            <offsetY>-50</offsetY>
                        </box>
                    </bodyShape>
                    <isSensor>true</isSensor>
                </physicsComponent>
            </component>
        </components>
    </object>
    <common:preloadResources>
        <resource>character</resource>
    </common:preloadResources>
</obj:objectList>