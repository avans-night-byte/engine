<?xml version="1.1" encoding="UTF-8"?>
<menu:menu
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="Menu  ../Schemas/menu.xsd"
        xmlns:menu="Menu"
        xmlns:common="Common">

    <name>MainMenu</name>
    <common:resources>
        <default>mainmenu_background</default>
    </common:resources>
    <backgroundMusic>mainmenu_music</backgroundMusic>
    <buttons>
        <button>
            <common:position>
                <x>100</x>
                <y>100</y>
            </common:position>
            <common:size>
                <width>500</width>
                <height>150</height>
            </common:size>
            <content>Start game</content>
            <common:color>
                <hex>db80f2</hex>
                <alpha>40</alpha>
            </common:color>
            <common:events>
                <onClick>
                    <playSound>bonk</playSound>
                    <loadScene>Credits</loadScene>
                </onClick>
            </common:events>
        </button>
        <button>
            <common:position>
                <x>100</x>
                <y>300</y>
            </common:position>
            <common:size>
                <width>200</width>
                <height>50</height>
            </common:size>
            <content>Stop Game</content>
            <common:color>
                <hex>fcba03</hex>
                <alpha>255</alpha>
            </common:color>
            <common:events>
                <onClick>
                    <custom>close</custom>
                </onClick>
            </common:events>
        </button>
        <button>
            <common:position>
                <x>400</x>
                <y>400</y>
            </common:position>
            <common:size>
                <width>200</width>
                <height>200</height>
            </common:size>
            <content>e</content>
            <resources>
                <default>github_logo</default>
            </resources>
            <common:events>
                <onClick>
                    <custom>close</custom>
                </onClick>
            </common:events>
        </button>
    </buttons>
    <texts>
        <text>
            <common:position>
                <x>50</x>
                <y>50</y>
            </common:position>
            <common:color>
                <hex>a83258</hex>
                <alpha>255</alpha>
            </common:color>
            <content>I'm going to end my life</content>
        </text>
        <text>
            <common:position>
                <x>350</x>
                <y>100</y>
            </common:position>
            <common:color>
                <hex>c9c947</hex>
                <alpha>100</alpha>
            </common:color>
            <content>Biiiiirthv</content>
        </text>
    </texts>
    <images>
        <image>
            <common:position>
                <x>1000</x>
                <y>1000</y>
            </common:position>
            <common:size>
                <width>100</width>
                <height>100</height>
            </common:size>
            <common:resources>
                <default>github_logo</default>
            </common:resources>
        </image>
    </images>
    <common:preloadResources>
        <resource>mainmenu_background</resource>
        <resource>mainmenu_music</resource>
        <resource>bonk</resource>
        <resource>github_logo</resource>
        <resource>sascha</resource>
        <resource>background_2</resource>
        <resource>minion</resource>
    </common:preloadResources>
</menu:menu>
