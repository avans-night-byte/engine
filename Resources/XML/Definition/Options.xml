<?xml version="1.1" encoding="UTF-8"?>
<menu:menu
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="Menu  ../Schemas/menu.xsd"
        xmlns:menu="Menu"
        xmlns:common="Common">

    <name>Options</name>
    <common:resources>
        <default>mainmenu_background</default>
    </common:resources>
    <backgroundMusic>mainmenu_music</backgroundMusic>
    <buttons>
        <button>
            <common:position>
                <x>700</x>
                <y>300</y>
            </common:position>
            <common:size>
                <width>500</width>
                <height>150</height>
            </common:size>
            <text>
                <common:font>
                    <family>Montserrat</family>
                    <weight>Bold</weight>
                    <size>32</size>
                </common:font>
                <common:color>
                    <hex>ffffff</hex>
                    <alpha>255</alpha>
                </common:color>
                <content>Resume</content>
            </text>
            <common:color>
                <hex>000000</hex>
                <alpha>100</alpha>
            </common:color>
            <common:events>
                <onClick>
                    <playSound>bonk</playSound>
                    <loadScene>Previous</loadScene>
                </onClick>
            </common:events>
        </button>
        <button>
            <common:position>
                <x>700</x>
                <y>500</y>
            </common:position>
            <common:size>
                <width>500</width>
                <height>150</height>
            </common:size>
            <text>
                <common:font>
                    <family>Montserrat</family>
                    <weight>Bold</weight>
                    <size>32</size>
                </common:font>
                <common:color>
                    <hex>ffffff</hex>
                    <alpha>255</alpha>
                </common:color>
                <content>Help</content>
            </text>
            <common:color>
                <hex>000000</hex>
                <alpha>100</alpha>
            </common:color>
            <common:events>
                <onClick>
                    <playSound>bonk</playSound>
                    <loadScene>Help</loadScene>
                </onClick>
            </common:events>
        </button>
        <button>
            <common:position>
                <x>700</x>
                <y>700</y>
            </common:position>
            <common:size>
                <width>500</width>
                <height>150</height>
            </common:size>
            <text>
                <common:font>
                    <family>Montserrat</family>
                    <weight>Bold</weight>
                    <size>32</size>
                </common:font>
                <common:color>
                    <hex>ffffff</hex>
                    <alpha>255</alpha>
                </common:color>
                <content>Quit</content>
            </text>
            <common:color>
                <hex>000000</hex>
                <alpha>100</alpha>
            </common:color>
            <common:events>
                <onClick>
                    <playSound>bonk</playSound>
                    <loadScene>MainMenu</loadScene>
                </onClick>
            </common:events>
        </button>
    </buttons>
    <texts/>
    <images>
        <image>
            <common:position>
                <x>830</x>
                <y>30</y>
            </common:position>
            <common:size>
                <width>250</width>
                <height>250</height>
            </common:size>
            <common:resources>
                <default>nightbyte_logo</default>
            </common:resources>
        </image>
    </images>
    <boxes/>
    <common:preloadResources>
        <resource>nightbyte_logo</resource>
        <resource>mainmenu_background</resource>
        <resource>mainmenu_music</resource>
        <resource>bonk</resource>
    </common:preloadResources>
</menu:menu>
