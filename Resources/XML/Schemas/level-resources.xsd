<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:lr="LevelResources"
           xmlns:cmn="Common"
           targetNamespace="LevelResources">

    <xs:import schemaLocation="common.xsd"
               namespace="Common"/>

    <xs:simpleType name="floatCap" id="floatCap">
        <xs:restriction base="xs:float">
            <xs:minInclusive value="0"/>
            <xs:maxInclusive value="1"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:element name="Level">
        <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
                <xs:element name="Object">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Components">
                                <xs:complexType>
                                    <xs:sequence>

                                        <!-- World Position Component -->
                                        <xs:element name="WorldPositionComponent">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element ref="cmn:position"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>

                                        <!-- Physics Component -->
                                        <xs:element name="PhysicsComponent" minOccurs="0">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="friction" type="lr:floatCap"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>

                                        <!-- -->
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>






