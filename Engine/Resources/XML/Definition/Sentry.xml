<?xml version="1.0" encoding="UTF-8" ?>
<sentry  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../Schemas/Sentry.xsd">
    <!-- CONCEPT!!! -->
    <className>NightByte.Engine.Entities.Sentry</className>
    <assets>
        <base repeat="no-repeat">
            <file>../assets/sentry.png</file>
        </base>
    </assets>

    <collider hasCollision="true">
        <size>
            <width>2</width>
            <height>2</height>
        </size>
    </collider>

    <events>
        <onAttack>
            <soundAction>../assets/sentry_attack.ogg</soundAction>
        </onAttack>
    </events>
</sentry>